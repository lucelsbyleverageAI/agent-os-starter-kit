# ==============================
# MCP Server - Environment File
# Copy this file to .env.local or .env and fill in values
# ==============================

# ------------------------------
# Core Server
# ------------------------------
MCP_SERVER_HOST=0.0.0.0
MCP_SERVER_PORT=8000
MCP_SERVER_NAME=custom-mcp-server
# Log level for local/stdout logs (Sentry still used for events)
MCP_LOG_LEVEL=INFO
# Enable extra debug output in development
DEBUG=false

# ------------------------------
# Authentication (Supabase - required)
# ------------------------------
# This project enforces Supabase for auth
SUPABASE_URL=
SUPABASE_ANON_KEY=
# Shared secret for token signing (same value in web + MCP)
MCP_TOKEN_SIGNING_SECRET=your-secret-key-here-at-least-32-chars-long
# Optional: service role (used only for internal server-to-server flows if needed)
SUPABASE_SERVICE_ROLE_KEY=

# Service account key used by LangGraph or other backends to call MCP
SERVICE_ACCOUNT_KEY=

# ------------------------------
# Frontend / Discovery / Public URLs
# ------------------------------
FRONTEND_BASE_URL=http://localhost:3000
# Public base URL for MCP when accessed externally (optional)
MCP_PUBLIC_BASE_URL=
# Base URL to LangConnect API (used for internal calls)
LANGCONNECT_BASE_URL=http://langconnect:8080
# Enable OAuth 2.1 discovery endpoints
ENABLE_OAUTH_DISCOVERY=true
# Optional explicit issuer (defaults to Supabase URL)
OAUTH_ISSUER=
# JWT audience expected
OAUTH_AUDIENCE=authenticated

# ------------------------------
# CORS
# ------------------------------
ENABLE_CORS=true
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:2024,http://127.0.0.1:2024

# ------------------------------
# Optional: Arcade Tools Integration
# ------------------------------
ENABLE_ARCADE=false
ARCADE_API_KEY=
ARCADE_BASE_URL=https://api.arcade.dev
# Comma-separated Arcade services to enable
ENABLED_ARCADE_SERVICES=gmail,google,gcal,microsoft,codesandbox,github,web,notiontoolkit,slack,math,hubspot,linkedin,dropbox,math,search

# ------------------------------
# Tooling / Caching / Timeouts
# ------------------------------
TOOL_CACHE_TTL=3600
USER_AUTH_CACHE_TTL=1800
TOOL_EXECUTION_TIMEOUT=300

# ------------------------------
# External API Keys (optional)
# ------------------------------
# OpenAI 
OPENAI_API_KEY=
# E2B 
E2B_API_KEY=
# Tavily 
TAVILY_API_KEY=

# ------------------------------
# Sentry (optional but recommended)
# ------------------------------
# Use SENTRY_DSN_MCP for service-specific DSN, or fallback SENTRY_DSN
SENTRY_DSN_MCP=
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.0