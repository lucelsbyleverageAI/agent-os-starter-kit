# .env.example for LangConnect Service
# =======================================
# This file provides a template for the environment variables required
# by the LangConnect service. Copy this file to .env and fill in the
# appropriate values for your environment.

# --- Supabase Integration ---
# These variables are for connecting to your Supabase project.
SUPABASE_URL=your_supabase_url_here
SUPABASE_SERVICE_KEY=your_supabase_service_role_key_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# --- Database Connection ---
# Direct connection details for the PostgreSQL database.
LANGCONNECT_POSTG-RES_HOST=localhost
LANGCONNECT_POSTGRES_PORT=5432
LANGCONNECT_POSTGRES_USER=postgres
LANGCONNECT_POSTGRES_PASSWORD=your_postgres_password_here
LANGCONNECT_POSTGRES_DB=postgres
LANGCONNECT_POSTGRES_SCHEMA=langconnect

# --- External Services & APIs ---
# API keys and URLs for third-party services used by LangConnect.
LANGCONNECT_LANGGRAPH_API_URL=http://localhost:8001 # Or your deployed LangGraph URL
LANGSMITH_API_KEY=your_langsmith_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
LANGCONNECT_SERVICE_ACCOUNT_KEY=your_static_api_key_for_internal_services
SUPADATA_API_TOKEN=your_supadata_api_token_here

# --- GCP Image Storage (Optional) ---
# Set IMAGE_STORAGE_ENABLED to "true" to use Google Cloud Storage for images.
IMAGE_STORAGE_ENABLED=false
GCP_PROJECT_ID=your_gcp_project_id
GCP_STORAGE_BUCKET=your_gcp_storage_bucket_name
# Base64-encoded GCP service account JSON key.
GCP_SERVICE_ACCOUNT_KEY=your_base64_encoded_gcp_key_here
IMAGE_PUBLIC_ACCESS=true
IMAGE_URL_EXPIRY_HOURS=24
IMAGE_BASE_URL=https://storage.googleapis.com

# --- Sentry Error Monitoring ---
# Configuration for Sentry integration for error and performance monitoring.
SENTRY_DSN_LANGCONNECT=your_sentry_dsn_for_langconnect
SENTRY_ENVIRONMENT=development # "development" or "production"
SENTRY_TRACES_SAMPLE_RATE=1.0 # Use 1.0 for dev, 0.1 for prod
SENTRY_PROFILES_SAMPLE_RATE=0.0 # Disabled by default