# -----------------------------------------------------------------------------
# Web Application Environment Variables
# -----------------------------------------------------------------------------
#
# This file serves as a template for the required environment variables for
# the web application. Copy this file to .env.local and fill in the values.
#

# --- Core Infrastructure ---

# Supabase URL and Anonymous Key are required for authentication and database access.
# You can get these from your Supabase project dashboard.
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=

# The base URL for the self-hosted LangConnect service.
# In a local Docker setup, this will typically be http://localhost:8000
NEXT_PUBLIC_BASE_API_URL=
NEXT_PUBLIC_LANGCONNECT_API_URL=

# The public-facing URL for the self-hosted MCP server.
NEXT_PUBLIC_MCP_SERVER_URL=

# The public-facing URL for the web application itself.
# e.g., http://localhost:3000
NEXT_PUBLIC_FRONTEND_BASE_URL=

# (Optional) The URL for your LangGraph API deployment.
# Defaults to http://localhost:2024 if not set.
NEXT_PUBLIC_LANGGRAPH_API_URL=

# (Optional) A JSON string defining your LangGraph deployments.
# e.g., '[{"id": "default", "name": "Default Deployment", "isDefault": true}]'
NEXT_PUBLIC_DEPLOYMENTS=

# --- Sentry ---

# (Optional) DSN for Sentry error tracking and monitoring.
NEXT_PUBLIC_SENTRY_DSN_WEB=

# --- Feature Flags ---

# (Optional) Set to "true" to disable Google as an authentication provider.
NEXT_PUBLIC_GOOGLE_AUTH_DISABLED=false

# (Optional) Set to "true" to use LangSmith for authenticating with the LangGraph proxy.
NEXT_PUBLIC_USE_LANGSMITH_AUTH=false

# (Optional) Set to "true" to display a banner indicating the app is in demo mode.
NEXT_PUBLIC_DEMO_APP=false

# (Optional) Set to "true" to use a modal for agent selection instead of an inline form.
NEXT_PUBLIC_USE_AGENT_SELECTION_MODAL=false