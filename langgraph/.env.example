# ===========================================
# LANGGRAPH AGENT CONFIGURATION
# ===========================================
# Copy this file to .env and fill in your actual values
# LangGraph runs separately from the main Docker stack

# ===========================================
# LANGSMITH CONFIGURATION
# ===========================================
# Required for LangGraph development and tracing
LANGCHAIN_PROJECT="ai-agent-os-develop"
LANGSMITH_API_KEY="langsmith_api_key"
LANGSMITH_TRACING="true"
LANGSMITH_ENDPOINT="https://eu.api.smith.langchain.com" # or US endpoint depending on data location

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
# Optional Sentry logging config
SENTRY_DSN_LANGGRAPH=sentry_dsn
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=1.0
SENTRY_PROFILES_SAMPLE_RATE=0.0

# ===========================================
# AI MODEL API KEYS
# ===========================================
# Required for agent functionality
OPENAI_API_KEY="openai_api_key"
ANTHROPIC_API_KEY="anthropic_api_key"

# ===========================================
# SERVICE CONNECTIONS (External URLs)
# ===========================================
# LangGraph connects to services from "outside" the Docker network
# These should point to localhost ports exposed by the main stack

# Supabase Authentication & Database
SUPABASE_URL=http://localhost:8000
SUPABASE_ANON_KEY=supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=supabase_service_role_key

# LangConnect URL
LANGCONNECT_API_URL=http://localhost:8080

# Custom MCP Server - URL and service account key
MCP_SERVER_URL=http://localhost:8001
MCP_SERVICE_ACCOUNT_KEY=mcp_service_account_key

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================
DEBUG=true
ENVIRONMENT=development
